{
    "$schema": "https://swc.rs/schema.json",
    "jsc": {
        "target": "es2022",
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "decoratorMetadata": true,
            "legacyDecorator": true
        },
        "keepClassNames": true,
        "externalHelpers": true,
        "loose": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "module": {
        "type": "commonjs"
    },
    "sourceMaps": true,
    "minify": false
}